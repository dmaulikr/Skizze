#import <Foundation/Foundation.h>

@interface StylusMove : NSObject <NSCoding> {
	NSInteger xMovement;
	NSInteger yMovement;
}

@property (readonly, nonatomic) NSInteger xMovement;
@property (readonly, nonatomic) NSInteger yMovement;

-(id)initWithXMovement:(NSInteger)x yMovement:(NSInteger)y;

-(void)markAsInvalid;

@end
